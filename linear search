//Write a cpp program to demonstrate the linear search
#include<iostream.h>
#include<conio.h>
void main()
{
int num[]={12,6,34,3,45,4,1};
int x,i,f;
clrscr();
cout<<"Enter array:-";
for(i=0;i<7;i++){
cout<<num[i]<<" ";
}
cout<<"\nEnter number to search:-";
cin>>x;
f=0;
for(i=0;i<7;i++){
if(x==num[i]){
cout<<"Number found at index:-"<<i;
f=1;
break;
}
}
if(f==0){
cout<<"Number not found";
}
getch();
}
